        }

        .interactive-button:hover {
            background-color: #e74c3c;
            color: #fff;
        }

        /* Animaci贸n de carga */
        .loading-bar {
            width: 100%;
            height: 20px;
            background-color: #f1c40f;
            position: relative;
            overflow: hidden;
        }

        .loading-fill {
            width: 0;
            height: 100%;
            background-color: #e67e22;
            animation: fill 3s infinite;
        }

        @keyframes fill {
            0% {
                width: 0;
            }
            100% {
                width: 100%;
            }
        }

        /* Tarjeta interactiva */
        .card {
            width: 200px;
            margin: 20px;
